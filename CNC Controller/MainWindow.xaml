<Window x:Class="CNC_Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CNC_Controller"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <UniformGrid Columns="3" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="LoadSettingButton" Content="Load Setting" Click="LoadSettingButton_OnClick"></Button>
            <Button x:Name="LoadGCodeButton" Content="Load GCode" Click="LoadGCodeButton_OnClick"></Button>
            <Button x:Name="RunWhealButton" Content="Run Wheal" Click="RunWhealButton_OnClick"></Button>

        </UniformGrid>
    </Grid>
</Window>
